<h1 class= "text-center mt-4 "><strong>Choose your dream car !</strong></h1>

<div class="container">
  <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  </form>
</div>

<div class="container">
  <div class="row row-cols-3">
    <% @cars.each do |car|%>
    <div class="col my-4">
      <div class="card-trip">
        <img src="<%= car.picture %>" class="card-img-top" alt="car">
        <%# <%= image_tag car.picture %>
        <div class="card-trip-infos">
          <div class="card-trip-infos-top">
            <h2><%=car.brand_name%></h2>
            <div>
              <ul>
                <li><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i></li>
              </ul>
            </div>
          </div>

          <p class="card-text text-ellipsis--2"> <%=car.overview%></p>

          <a href="<%= car_path(car.id) %>" class="btn btn-primary w-100 mt-3">Rent for <strong><%=car.price%>â‚¬</strong>/day</a>
        </div>


      </div>
    </div>
    <% end%>
  </div>
</div>
