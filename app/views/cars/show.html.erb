<div class="container">
  <div class="row">
    <div class="col-sm-8">

      <div class="card-trip-infos-top">
        <div>
          <h1><%=@car.brand_name + ' ' + @car.model%></h1>
        </div>
        <div>
          <ul>
            <li><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i><i class="fa-solid fa-star mt-3"></i></li>
          </ul>
        </div>
      </div>

      <div class="card-trip">
        <img src="<%= @car.picture %>" class="card-img-top" alt="car">
        <%# <%= image_tag car.picture %>
      </div>

      <div class="card-trip-infos">
        <p class="card-text"> <%=@car.overview%></p>
        <div>
          <p><%=link_to "Back to the list", cars_path %></p>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <h2><%= @car.price %> â‚¬ / per day </h2>
      <%= simple_form_for [@car, @booking] do |f| %>
      <div class="form-inputs">
        <%= f.input :start_rent, as: :date %>
        <%= f.input :end_rent, as: :date %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Book", class: "btn btn-dark w-100 rounded"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
